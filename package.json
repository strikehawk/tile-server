{
  "name": "tile-server",
  "version": "1.0.0",
  "description": "Custom Tile Server",
  "author": "Strikehawk",
  "license": "ISC",
  "scripts": {
    "serve": "node dist/app.js",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "pack": "npm run build && node scripts/copy-node-modules.js",
    "watch-node": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect-brk dist/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.3",
    "express-session": "^1.17.1",
    "express-validator": "^6.10.0",
    "fs-extra": "^9.1.0",
    "gdal": "0.9.8",
    "geographiclib": "^1.49.0",
    "lodash": "^4.17.21",
    "lusca": "^1.7.0",
    "ol": "^5.3.0",
    "proj4": "^2.7.0",
    "pug": "^3.0.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "socket.io": "^3.1.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/jquery": "^3.5.5",
    "@types/jquery.validation": "^1.16.6",
    "@types/lodash": "^4.14.168",
    "@types/lusca": "^1.7.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^9.4.6",
    "@types/openlayers": "4.6.17",
    "@types/proj4": "^2.5.0",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.5",
    "@types/shelljs": "^0.8.8",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.0",
    "concurrently": "^6.0.0",
    "dependency-tree": "^8.0.0",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.2"
  }
}
